# App
NODE_ENV=development
PORT=3001
# Публичный URL API (для HLS-ссылок в просмотре), напр. http://localhost:3001
API_PUBLIC_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/archiverse

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# JWT
JWT_ACCESS_SECRET=your-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# S3 (leave S3_ENDPOINT empty for real AWS; for MinIO use e.g. http://localhost:9000)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=archiverse-media
S3_ACCESS_KEY=
S3_SECRET_KEY=
# Public base URL for avatar links (optional), e.g. https://cdn.example.com/avatars
S3_AVATAR_BASE_URL=

# Vault (optional at start)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=

# TUS upload (path for temp files)
TUS_UPLOAD_PATH=./uploads
