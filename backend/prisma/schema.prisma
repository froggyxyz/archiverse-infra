// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  avatarUrl    String?
  storageLimit BigInt   @default(10737418240) // 10 GB
  storageUsed  BigInt   @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens   RefreshToken[]
  media           Media[]
  chatParticipants ChatParticipant[]
  messagesSent    Message[]
}

model Chat {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants ChatParticipant[]
  messages     Message[]
}

model ChatParticipant {
  id          String    @id @default(cuid())
  chatId      String
  userId      String
  lastReadAt  DateTime? // непрочитанные = сообщения после lastReadAt
  joinedAt    DateTime  @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([chatId, userId])
  @@index([userId])
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  senderId  String
  text      String?  // с сохранением переносов строк
  createdAt DateTime @default(now())

  chat       Chat            @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender     User            @relation(fields: [senderId], references: [id], onDelete: Cascade)
  attachments ChatAttachment[]
}

enum ChatAttachmentType {
  IMAGE
  VIDEO
  AUDIO
}

model ChatAttachment {
  id           String            @id @default(cuid())
  messageId    String
  type         ChatAttachmentType
  s3Key        String
  thumbnailKey String?           // опционально: превью для видео (от фронта)
  mimeType     String
  size         BigInt            // bytes

  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([messageId])
}

model Media {
  id            String   @id @default(cuid())
  userId        String
  filename      String
  size          BigInt?  // bytes, set when upload/processing complete
  mimeType      String
  type          MediaType
  s3Key         String?
  thumbnailKey  String?  // превью-кадр для видео (JPEG в S3)
  hlsPlaylistKey String?  // HLS: ключ playlist.m3u8 в S3 (сегменты рядом)
  status        MediaStatus @default(UPLOADING)
  currentStage  String?  // for frontend: validating, compressing, transcoding, etc.
  stageProgress Float?   // 0..1 within current stage
  jobId         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum MediaType {
  VIDEO
  AUDIO
  IMAGE
}

enum MediaStatus {
  UPLOADING
  PROCESSING
  COMPLETED
  FAILED
}

model RefreshToken {
  id        String   @id // tokenId from JWT payload, for revocation lookup
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
